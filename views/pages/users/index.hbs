<div class="container">
    <div class="wrap d-flex justify-content-between align-items-center">
        <h1 class="h2">Таблица пользователей</h1>
        <a href="/create" class="btn btn-primary btn-sm">Добавить пользователя</a>
    </div>
    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Имя</th>
                <th scope="col">Фамилия</th>
                <th scope="col">Почта</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {{#each users}}
                <tr>
                    <th>{{ this._id }}</th>
                    <td>{{ this.name }}</td>
                    <td>{{ this.surname }}</td>
                    <td>{{ this.email }}</td>
                    <td class="d-flex justify-content-end">
                        <div class="btn-group">
                            <button class="btn dropdown-toggle not-arrow" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                                <li>
                                    <a href="/{{this._id}}/edit" class="dropdown-item text-primary">Изменить <i
                                            class="fa fa-pencil-alt"></i></a>
                                </li>
                                <li>
                                    <a href="/{{this._id}}/remove" class="dropdown-item text-danger">Удалить <i
                                            class="fa fa-trash-alt"></i></a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
